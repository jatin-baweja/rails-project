<% if projects.present? %>
  <% cache projects do %>
    <div class="row-fluid">
    <% projects.each do |project| %>
      <div class="small-box">
        <% cache project do %>
          <%= render partial: 'projects/short_description', locals: { :project => project } %>
        <% end %>
      </div>
    <% end %>
    </div>
  <% end %>
<% else %>
  <p>No projects here.</p>
<% end %>
