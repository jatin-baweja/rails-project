<%= get_errors(@user) %>
<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
<div class="row">
  <div class="span5">

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <span class='required'>*</span>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :required => true %>
      <p class="help-block">Only alphabets and spaces allowed in name</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <span class='required'>*</span>
    <div class="controls">
      <%= f.email_field :email, :class => 'text_field', :required => true %>
      <p class="help-block">Enter your email address</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email_confirmation, "Confirm Email", :class => 'control-label' %>
    <span class='required'>*</span>
    <div class="controls">
      <%= f.email_field :email_confirmation, :class => 'text_field', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <span class='required'>*</span>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field', :required => true %>
      <p class="help-block">Password must be 6-30 characters long</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, "Confirm Password", :class => 'control-label' %>
    <span class='required'>*</span>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field', :required => true %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <span class='required'>*</span><span> marks required fields</span>
    </div>
  </div>

  </div>
  <div class="span2">
    <h3 class="text-center">OR</h3>
  </div>
  <div class="span5">
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
  </div>
</div>

  <div class="form-actions">
    <%= f.submit "Signup", :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', users_path, :class => 'btn' %>
  </div>
<% end %>
