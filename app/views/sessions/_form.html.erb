<%= form_tag 'login', :class => 'form-horizontal' do %>
<div class="row">
  <div class="span5">

  <div class="control-group">
    <%= label_tag :email, 'Email', :class => 'control-label' %>
    <div class="controls">
      <%= email_field_tag :email, params[:email], :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, 'Password', :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, params[:password], :class => 'text_field' %>
    </div>
  </div>


  </div>
  <div class="span2">
    <h3 class="text-center">OR</h3>
  </div>
  <div class="span5">
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
  </div>
</div>

  <div class="form-actions">
    <%= submit_tag "Login", :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', root_path, :class => 'btn' %>
  </div>
<% end %>
