<div class="page-header">
  <h1>Subscribe to our newsletter</h1>
</div>
<%= form_tag subscriptions_path, :class => 'form-horizontal' do %>
  <div class="control-group">
    <%= label_tag :first_name, "First Name", :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :first_name, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :last_name, "Last Name", :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :last_name, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :email, "Email", :class => 'control-label' %>
    <div class="controls">
      <span><%= text_field_tag :email, @email, :class => 'text_field' %></span>
    </div>
  </div>


  <div class="form-actions">
    <%= submit_tag "Subscribe", :class => 'btn btn-primary' %>
  </div>
<% end %>