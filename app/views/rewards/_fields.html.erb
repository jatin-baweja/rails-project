  <div class="control-group">
    <%= f.label "Amount", :class => 'control-label' %>
    <span class='required'>*</span>
    <div class="controls">
      <%= f.text_field :minimum_amount, :class => 'text_field', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <span class='required'>*</span>
    <div class="controls">
      <%= f.text_area :description, :class => 'text', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estimated_delivery_on, :class => 'control-label' %>
    <span class='required'>*</span>
    <div class="controls">
      <%= f.date_select :estimated_delivery_on, :class => 'date_field', :start_year => Time.current.year, :order => [:month, :year]  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <span class='required'>*</span><span> marks required fields</span>
    </div>
  </div>
